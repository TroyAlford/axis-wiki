{
  "author": "Troy Alford",
  "name": "axis-wiki",
  "version": "1.0.0",
  "description": "Node.js Wiki, based on React w/ES6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/axis-wiki.git"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "bulma": "0.0.25",
    "cheerio": "^0.20.0",
    "chokidar": "^1.4.3",
    "cookie-parser": "^1.4.1",
    "del": "^2.2.0",
    "es6-promise": "^3.1.2",
    "express": "^4.13.4",
    "fs-utils": "^0.7.0",
    "graceful-fs": "^4.1.3",
    "isomorphic-fetch": "^2.2.1",
    "js-beautify": "^1.6.2",
    "lodash": "^4.2.1",
    "lwip": "0.0.8",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "multer": "^1.1.0",
    "normalize.css": "^4.0.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.0",
    "react-tagsinput": "^3.6.1",
    "react-tinymce": "github:TroyAlford/react-tinymce",
    "redux": "^3.5.2",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-jest": "^10.0.2",
    "babel-preset-es2015": "*",
    "babel-preset-jest": "*",
    "babel-preset-react": "*",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-resolutions": "^1.0.6",
    "concat": "github:azer/concat",
    "concat-cli": "^4.0.0",
    "jest-cli": "*",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "react-addons-test-utils": "^15.0.1",
    "react-helmet": "^3.1.0",
    "redux-devtools": "^3.2.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-router",
      "<rootDir>/node_modules/react-addons-test-utils"
    ]
  },
  "scripts": {
    "start": "babel-node server/server.js -c ../config/config.json",
    "test": "jest",
    "develop": "npm run serve & npm run build-jsx-dep & npm run watch-jsx & npm run watch-css",
    "build": "npm run clean && (npm run build-jsx & npm run build-css)",
    "build-css": "npm run build-css-app & npm run build-css-dep",
    "build-css-app": "mkdirp build/css && npm run concat-css-app && node-sass build/sass/application.scss -o build/css --output-style compressed --source-map true --source-map-embed",
    "build-css-dep": "node-sass vendor/dependencies.scss -o build/css --output-style compressed --source-map true --source-map-embed",
    "build-jsx": "npm run build-jsx-app & npm run build-jsx-dep",
    "build-jsx-app": "mkdirp build/js && browserify -x react -x react-dom -x react-router -x react-tinymce -x lodash source/application/Application.js > build/js/application.js",
    "build-jsx-dep": "mkdirp build/js && browserify -r react -r react-dom -r react-router -r react-tinymce -r lodash vendor/dependencies.js > build/js/dependencies.js ",
    "clean": "rm -rf build",
    "concat-css-app": "mkdirp build/sass && concat-cli -f styles/**/*.scss -o build/sass/application.scss",
    "serve": "nodemon --watch ./server --exec babel-node server/server.js",
    "watch-css": "nodemon --watch styles -e css,scss --exec 'npm run build-css'",
    "watch-jsx": "nodemon --watch source -e js --exec 'npm run build-jsx-app'"
  }
}
