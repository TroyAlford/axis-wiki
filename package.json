{
  "author": "Troy Alford",
  "name": "axis-wiki",
  "version": "1.0.0",
  "description": "Node.js Wiki, based on React w/ES6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TroyAlford/axis-wiki.git"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "bulma": "^0.1.2",
    "cheerio": "^0.20.0",
    "chokidar": "^1.5.1",
    "cookie-parser": "^1.4.3",
    "del": "^2.2.2",
    "express": "^4.13.4",
    "fs-utils": "^0.7.0",
    "graceful-fs": "^4.1.3",
    "isomorphic-fetch": "^2.2.1",
    "js-beautify": "^1.6.2",
    "lodash": "^4.13.1",
    "lwip": "0.0.9",
    "mathjs": "^3.3.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "multer": "^1.1.0",
    "normalize.css": "^4.0.0",
    "q": "^1.4.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-dropzone": "^3.5.1",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-tagsinput": "^3.7.0",
    "react-tinymce": "^0.5.1",
    "redux": "^3.5.2",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-jest": "^14.1.0",
    "babel-plugin-lodash": "^3.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-jest": "^14.1.0",
    "babel-preset-react": "*",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-resolutions": "^1.0.6",
    "concat-cli": "^4.0.0",
    "jest-cli": "^14.1.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "react-addons-test-utils": "^15.1.0",
    "redux-devtools": "^3.2.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-json": "^2.0.1",
    "rollup-plugin-node-builtins": "^1.0.7",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "superchild": "^0.1.5"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-router/",
      "<rootDir>/node_modules/react-addons-test-utils/",
      "<rootDir>/node_modules/lodash/"
    ]
  },
  "scripts": {
    "start": "NODE_ENV=production npm run build && NODE_ENV=production babel-node server/server.js",
    "test": "jest",
    "develop": "npm run watch & npm run serve-watched",
    "build": "npm run clean && (npm run build-jsx & npm run build-css)",
    "build-css": "npm run build-css-app & npm run build-css-dep",
    "build-css-app": "npm run concat-css-app && node-sass build/sass/application.scss -o build/css --output-style compressed --source-map true --source-map-embed",
    "build-css-dep": "node-sass vendor/dependencies.scss -o build/css --output-style compressed --source-map true --source-map-embed",
    "build-jsx": "npm run build-jsx-app & npm run build-jsx-dep",
    "build-jsx-app": "rollup -c rollup.application.js",
    "build-jsx-dep": "rollup -c rollup.dependencies.js",
    "clean": "rm -rf build && mkdirp build && (mkdirp build/js & mkdirp build/css & mkdirp build/sass)",
    "concat-css-app": "concat-cli -f styles/**/*.scss -o build/sass/application.scss",
    "serve": "babel-node server/server.js",
    "serve-watched": "nodemon --watch ./server --exec 'babel-node server/server.js'",
    "watch": "npm run clean && (npm run watch-css & npm run watch-jsx)",
    "watch-css": "npm run watch-css-app & npm run watch-css-dep",
    "watch-css-app": "nodemon --watch ./styles -e css,scss --exec 'npm run build-css-app'",
    "watch-css-dep": "nodemon --watch ./vendor -e css,scss --exec 'npm run build-css-dep'",
    "watch-jsx": "npm run watch-jsx-app & npm run watch-jsx-dep",
    "watch-jsx-app": "nodemon --watch ./source -e js --exec 'npm run build-jsx-app'",
    "watch-jsx-dep": "nodemon --watch ./vendor -e js --exec 'npm run build-jsx-dep'"
  }
}
